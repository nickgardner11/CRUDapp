<%- include('partials/header'); %>
<div>
<% if (articles.length > 0) { %>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author Name</th>
                <th>Topic</th>
                <th>Post Number</th>
            </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < articles.length; i++) { %>
            <tr>
                <td><%= articles[i].id %></td>
                <td><%= articles[i].title %></td>
                <td><%= articles[i].author %></td>
                <td><%= articles[i].topic %></td>
                <td><%= articles[i].date %></td>
                <td><a href="/delete/<%= articles[i].id %>" class="btn btn-sm btn-danger">Delete</a></td>
                <td>
                    <a href="/edit/<%= articles[i].id %>" class="btn btn-sm btn-success">Edit</a>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
<% } else { %>
    <p class="text-center">No posts found.</p>
<% } %>
</div>
</div>
</body>
</html>